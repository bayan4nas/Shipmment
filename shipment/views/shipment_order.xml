<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="shipment_order_list">
      <field name="name">shipment list</field>
      <field name="model">shipment.order</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="date_order"/>
          <field name="customer_id"/>
          <field name="vendor_id"/>
          <field name="state"/>
        </tree>
      </field>
    </record>


    <record id="veiw_shipment_order" model="ir.ui.view">
      <field name="name">shipment.shipment.order.form</field>
      <field name="model">shipment.order</field>
      <field name="arch" type="xml">
        <form string="Shipment Order" class="o_sale_order">
          <header>
            <field name="invoiced" invisible="1" />
            <field name="billed" invisible="1" />
            <button name="action_confirm" string="Confirm" type="object" class="oe_highlight" states="draft"/>
            <button name="create_customer_invocie" type="object" string="Create Customer Invoice" states="confirm" class="oe_highlight"  attrs="{'invisible': ['|',('invoiced', '=', True)]}"/>
            <button name="create_vendor_bill" type="object" string="Create Vendor Bill" class="oe_highlight" states="confirm" attrs="{'invisible': ['|',('billed', '=', True)]}"/>

            <field name="state" widget="statusbar" statusbar_visible="draft,confirm,done"/>
          </header>
          <sheet>

            <div class="oe_title">
              <h1>
                <field name="name" readonly="1"/>
              </h1>
            </div>
            <group>
              <group>
                <field name="customer_id" widget="res_partner_many2one" context="{'res_partner_search_mode': 'customer'}"/>
                <field name="from_country_id"/>
                <field name="date_order"/>
              </group>
              <group>
                <field name="vendor_id" widget="res_partner_many2one" context="{'res_partner_search_mode': 'supplier'}" />

                <field name="to_country_id"/>
              </group>
            </group>
            <notebook>
              <!-- attrs="{'readonly': [('state', '!=', 'draft')]}" -->
              <page string="Order Lines" name="Order Lines">
                <field name="line_ids">
                  <tree editable="bottom">
                    <field name="product_id"/>
                    <field name="qty"/>
                    <field name="cost" invisible="1" />
                  </tree>
                </field>
              </page>
              <page name="Info" string="Other Info">
                <group>
                  <group string="Accounting" name ="accounting_info_group">
                    <field name="inv_id" readonly="1" attrs="{'invisible': [('invoiced', '!=', True)]}"/>
                    <field name="bill_id" readonly="1" attrs="{'invisible': [('billed', '!=', True)]}"/>
                  </group>
                </group>
                <field name="narration" placeholder="Add an internal note..." nolabel="1" height="50"/>
              </page>


            </notebook>
          </sheet>
          <div class="oe_chatter">
            <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
            <field name="activity_ids" widget="mail_activity"/>
            <field name="message_ids" widget="mail_thread"/>
          </div>
        </form>
      </field>
    </record>

    <!-- actions opening views on models -->
    <record id="action_orders" model="ir.actions.act_window">
      <field name="name">Shipment Orders</field>
      <field name="res_model">shipment.order</field>
      <field name="view_mode">tree,form</field>
      <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">
                    Create a new shipment, the first step of a new sale!
        </p>
        <p>
                    Once the quotation is confirmed, it becomes a shipment order.<br/>
 You will be able to create an invoice and bill , collect the payment,pay bills
        </p>
      </field>
    </record>

  </data>
</odoo>